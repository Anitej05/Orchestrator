{
  "id": "document_analysis_agent",
  "owner_id": "orbimesh-vendor",
  "name": "Orbimesh Document Analysis Agent",
  "description": "Professional WORD DOCUMENT processing agent for DOCX, TXT, and PDF files ONLY. NOT for spreadsheets (CSV, Excel) - use Spreadsheet Agent for those. Capabilities: RAG-based Q&A, document display, advanced Word editing (formatting, tables, images, lists).",
  "agent_type": "http_rest",
  "version": "1.0.0",
  "status": "active",
  "price_per_call_usd": 0.005,
  "requires_credentials": false,
  "credential_fields": [],
  "connection_config": {
    "base_url": "http://localhost:8070",
    "timeout": 60
  },
  "endpoints": [
    {
      "endpoint": "/analyze",
      "http_method": "POST",
      "description": "Extract text, tables, and metadata from uploaded documents (PDF, DOCX, images) into structured form.",
      "parameters": [
        {
          "name": "vector_store_path",
          "param_type": "string",
          "required": false,
          "description": "Path to FAISS vector store for a single document"
        },
        {
          "name": "vector_store_paths",
          "param_type": "array",
          "required": false,
          "description": "Paths to multiple vector stores for multi-doc analysis"
        },
        {
          "name": "query",
          "param_type": "string",
          "required": true,
          "description": "Question about the document"
        }
      ]
    },
    {
      "endpoint": "/display",
      "http_method": "POST",
      "description": "Render document previews or extracted content to the canvas for inspection.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document file"
        }
      ]
    },
    {
      "endpoint": "/create",
      "http_method": "POST",
      "description": "Generate a new document from a prompt and optional template.",
      "parameters": [
        {
          "name": "content",
          "param_type": "string",
          "required": false,
          "description": "Direct content for the document (optional if using reference_file_path or instruction)"
        },
        {
          "name": "reference_file_path",
          "param_type": "string",
          "required": false,
          "description": "Path to a source file to transform (e.g., PDF, TXT) into a new document"
        },
        {
          "name": "instruction",
          "param_type": "string",
          "required": false,
          "description": "Natural language instruction for LLM to generate or transform content (e.g., 'Create a summary report')"
        },
        {
          "name": "file_name",
          "param_type": "string",
          "required": true,
          "description": "File name (e.g., 'report.docx')"
        },
        {
          "name": "file_type",
          "param_type": "string",
          "required": false,
          "description": "Type: docx, txt, pdf (default: docx)"
        },
        {
          "name": "output_dir",
          "param_type": "string",
          "required": false,
          "description": "Directory to save (default: 'storage/documents')"
        }
      ]
    },
    {
      "endpoint": "/edit",
      "http_method": "POST",
      "description": "Apply edits (insert/replace/delete text or tables) to an existing document and persist the changes.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document to edit"
        },
        {
          "name": "instruction",
          "param_type": "string",
          "required": true,
          "description": "Natural language edit instruction"
        }
      ]
    },
    {
      "endpoint": "/undo",
      "http_method": "POST",
      "description": "Undo the last edit in the current document session.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document"
        }
      ]
    },
    {
      "endpoint": "/redo",
      "http_method": "POST",
      "description": "Redo a previously undone edit in the current session.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document"
        }
      ]
    },
    {
      "endpoint": "/history",
      "http_method": "POST",
      "description": "List edit history and versions for the active document.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document."
        }
      ]
    }
  ],
