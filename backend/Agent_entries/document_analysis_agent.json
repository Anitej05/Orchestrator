{
  "id": "document_analysis_agent",
  "owner_id": "orbimesh-vendor",
  "name": "Orbimesh Document Analysis Agent",
  "description": "Professional WORD DOCUMENT processing agent for DOCX, TXT, and PDF files ONLY. NOT for spreadsheets (CSV, Excel) - use Spreadsheet Agent for those. Capabilities: RAG-based Q&A, document display, advanced Word editing (formatting, tables, images, lists).",
  "agent_type": "http_rest",
  "version": "1.0.0",
  "status": "active",
  "price_per_call_usd": 0.005,
  "requires_credentials": false,
  "credential_fields": [],
  "connection_config": {
    "base_url": "http://localhost:8070",
    "timeout": 60
  },
  "endpoints": [
    {
      "endpoint": "/analyze",
      "http_method": "POST",
      "description": "ONLY for answering questions ABOUT a document's content (e.g., 'What is this document about?', 'Summarize the key points'). NOT for editing or modifying documents. Uses RAG to analyze document content and answer questions. Supports analyzing multiple documents at once. Always displays the document in canvas.",
      "parameters": [
        {
          "name": "vector_store_path",
          "param_type": "string",
          "required": false,
          "description": "The file path to the FAISS vector store index for a SINGLE document. Use this for backward compatibility when analyzing one document."
        },
        {
          "name": "vector_store_paths",
          "param_type": "array",
          "required": false,
          "description": "Array of file paths to FAISS vector store indexes for MULTIPLE documents. Use this when analyzing multiple documents together. The agent will merge all vector stores and answer questions across all documents."
        },
        {
          "name": "query",
          "param_type": "string",
          "required": true,
          "description": "The user's question about the document(s) (e.g., 'What are the main conclusions of this report?', 'List all products mentioned in these RFPs')."
        }
      ]
    },
    {
      "endpoint": "/display",
      "http_method": "POST",
      "description": "Displays a document (PDF, DOCX, TXT) in the canvas for viewing.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document file to display."
        }
      ]
    },
    {
      "endpoint": "/create",
      "http_method": "POST",
      "description": "Creates a new document with the provided content. Always creates immediately and displays the result.",
      "parameters": [
        {
          "name": "content",
          "param_type": "string",
          "required": true,
          "description": "Content for the document."
        },
        {
          "name": "file_name",
          "param_type": "string",
          "required": true,
          "description": "Name for the document file (e.g., 'report.docx')."
        },
        {
          "name": "file_type",
          "param_type": "string",
          "required": false,
          "description": "Document type: 'docx', 'txt', or 'pdf' (default: 'docx')."
        },
        {
          "name": "output_dir",
          "param_type": "string",
          "required": false,
          "description": "Directory to save the document (default: 'backend/storage/documents')."
        }
      ]
    },
    {
      "endpoint": "/edit",
      "http_method": "POST",
      "description": "ONLY for MODIFYING or EDITING document content using natural language instructions. The agent will analyze the document structure and intelligently interpret the instruction to execute the appropriate edits. Supports all Word editing capabilities: formatting (colors, fonts, styles, bold, italic, underline, highlight), adding/removing content (paragraphs, headings, lists, tables, images), page layout (headers, footers, page breaks, sections), and advanced features (hyperlinks, find/replace, tab stops). Always executes immediately and displays the edited document. Use this endpoint for ANY request to change, modify, format, or edit a document.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document to edit."
        },
        {
          "name": "instruction",
          "param_type": "string",
          "required": true,
          "description": "Natural language instruction describing the desired edit. Examples: 'Make all subheadings red and bold', 'Add a table with 3 columns for Q1, Q2, Q3 sales data', 'Change the conclusion section to italic', 'Add a header with the company name', 'Highlight all important terms in yellow', 'Add bullet points for the key findings'. The agent will interpret the instruction with full document context and execute the appropriate actions."
        }
      ]
    },
    {
      "endpoint": "/undo",
      "http_method": "POST",
      "description": "Undo the last edit to a document. Restores the previous version and displays it. Returns undo/redo availability status.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document."
        }
      ]
    },
    {
      "endpoint": "/redo",
      "http_method": "POST",
      "description": "Redo the last undone edit to a document. Restores the next version and displays it. Returns undo/redo availability status.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document."
        }
      ]
    },
    {
      "endpoint": "/history",
      "http_method": "POST",
      "description": "Get the version history for a document. Shows all saved versions with timestamps and descriptions.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document."
        }
      ]
    }
  ],
