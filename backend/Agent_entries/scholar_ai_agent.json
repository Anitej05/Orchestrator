{
  "id": "scholarai_agent",
  "owner_id": "orbimesh-vendor",
  "name": "ScholarAI Agent",
  "description": "A research assistant for scholarly papers. Search, read full-text, and analyze academic papers.",
  "price_per_call_usd": 0.003,
  "status": "active",
  "public_key_pem": "-----BEGIN PUBLIC KEY-----\nMCowBQYDK2VwAyEA3FcU8hPhmFLgez6qPf801aQahasAlG5S4MPb16nWJPA=\n-----END PUBLIC KEY-----",
  "endpoints": [
    {
      "endpoint": "https://www.scholar-ai.net/api/abstracts",
      "http_method": "GET",
      "description": "Search for scholarly papers by topic. Use for 'Find papers about machine learning', 'Research on climate change'.",
      "parameters": [
        {
          "name": "keywords",
          "param_type": "string",
          "required": true,
          "description": "Search keywords (must be in English)"
        },
        {
          "name": "query",
          "param_type": "string",
          "required": true,
          "description": "Natural language question to answer"
        },
        {
          "name": "sort",
          "param_type": "string",
          "required": false,
          "default_value": "relevance",
          "description": "Sort by: relevance, cited_by_count, publication_date"
        },
        {
          "name": "peer_reviewed_only",
          "param_type": "boolean",
          "required": false,
          "default_value": "true",
          "description": "Only peer-reviewed articles"
        },
        {
          "name": "start_year",
          "param_type": "integer",
          "required": false,
          "description": "Starting year for search range"
        },
        {
          "name": "end_year",
          "param_type": "integer",
          "required": false,
          "description": "Ending year for search range"
        },
        {
          "name": "offset",
          "param_type": "integer",
          "required": false,
          "default_value": "0",
          "description": "Pagination offset"
        }
      ]
    },
    {
      "endpoint": "https://www.scholar-ai.net/api/fulltext",
      "http_method": "GET",
      "description": "Read the full text of a paper in sections/chunks. Can also retrieve figures and images.",
      "parameters": [
        {
          "name": "pdf_id",
          "param_type": "string",
          "required": true,
          "description": "Paper identifier (prefixed with 'PDF_URL:' or 'PROJ:')"
        },
        {
          "name": "chunk",
          "param_type": "integer",
          "required": false,
          "default_value": "1",
          "description": "Section/chunk number to retrieve"
        }
      ]
    },
    {
      "endpoint": "https://www.scholar-ai.net/api/analyze_project",
      "http_method": "GET",
      "description": "Analyze multiple papers in a project to answer questions using RAG. Modes: 'comprehensive' for detailed report, 'tabular' for structured table.",
      "parameters": [
        {
          "name": "project_name",
          "param_type": "string",
          "required": true,
          "description": "Project name to analyze"
        },
        {
          "name": "analysis_mode",
          "param_type": "string",
          "required": true,
          "default_value": "tabular",
          "description": "Mode: 'comprehensive' or 'tabular'"
        },
        {
          "name": "question",
          "param_type": "array[string]",
          "required": true,
          "description": "Questions to answer for each paper"
        }
      ]
    },
    {
      "endpoint": "https://www.scholar-ai.net/api/add_to_project",
      "http_method": "GET",
      "description": "Add a paper to a research project using its identifier (DOI, PMID, etc.).",
      "parameters": [
        {
          "name": "paper_id",
          "param_type": "string",
          "required": true,
          "description": "Paper identifier (DOI, PMID, SS_ID, ARXIV)"
        },
        {
          "name": "project_name",
          "param_type": "string",
          "required": false,
          "default_value": "GPT",
          "description": "Project name to add paper to (default: 'GPT')"
        }
      ]
    }
  ]
}