        },
        {
          "name": "page_size",
          "param_type": "integer",
          "required": false,
          "default_value": "10",
          "description": "Number of results (max 100)."
        }
      ]
    },
    {
      "endpoint": "http://localhost:8020/top-headlines",
      "http_method": "GET",
      "description": "Get top business headlines for a country. Use for 'Top news in US', 'Business headlines in India'.",
      "parameters": [
        {
          "name": "country",
          "param_type": "string",
          "required": true,
          "description": "Country code (e.g., 'us', 'gb', 'in')."
        },
        {
          "name": "page_size",
          "param_type": "integer",
          "required": false,
          "default_value": "10",
