# =============================================================================
# REQUIRED - Core LLM APIs (At least one is required)
# =============================================================================
CEREBRAS_API_KEY=your_cerebras_api_key_here  # Primary LLM (recommended)
GROQ_API_KEY=your_groq_api_key_here          # Fallback LLM (optional but recommended)

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
PG_USER=postgres
PG_PASSWORD=your_postgres_password_here
PG_HOST=localhost
PG_PORT=5432
DB_NAME=agentdb

# =============================================================================
# REQUIRED - Authentication (Clerk)
# =============================================================================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_JWT_ISSUER=https://your-app.clerk.accounts.dev
CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json
CLERK_JWT_AUDIENCE=your_jwt_audience

# =============================================================================
# REQUIRED - Security
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# =============================================================================
# OPTIONAL - Additional LLM Providers
# =============================================================================
NVIDIA_API_KEY=your_nvidia_api_key_here      # Fallback LLM
OLLAMA_API_KEY=your_ollama_api_key_here      # Local LLM option

# =============================================================================
# OPTIONAL - Agent-specific API Keys
# =============================================================================
SCHOLARAI_API_KEY=your_scholarai_api_key_here
NEWS_AGENT_API_KEY=your_news_agent_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# OPTIONAL - Email Integration (Composio/Gmail)
# =============================================================================
COMPOSIO_API_KEY=your_composio_api_key_here
GMAIL_CONNECTION_ID=conn_xxx
GMAIL_MCP_URL=https://mcp.composio.dev/gmail/sse

# =============================================================================
# OPTIONAL - Agent Ports (defaults shown)
# =============================================================================
BROWSER_AGENT_PORT=8090
DOCUMENT_AGENT_PORT=8070
SPREADSHEET_AGENT_PORT=8041
IMAGE_AGENT_PORT=8060
MAIL_AGENT_PORT=8040

# =============================================================================
# OPTIONAL - Environment Settings
# =============================================================================
TF_ENABLE_ONEDNN_OPTS=0                      # Disable TensorFlow optimizations
SKIP_AGENTS=agent1,agent2                    # Skip specific agents on startup
