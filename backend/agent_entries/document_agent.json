{
  "id": "document_agent",
  "owner_id": "orbimesh-vendor",
  "name": "Orbimesh Document Agent",
  "description": "Professional WORD DOCUMENT processing agent for DOCX, TXT, and PDF files ONLY. NOT for spreadsheets (CSV, Excel) - use Spreadsheet Agent for those. Capabilities: RAG-based Q&A, document display, advanced Word editing (formatting, tables, images, lists).",
  "agent_type": "http_rest",
  "version": "1.0.0",
  "status": "active",
  "price_per_call_usd": 0.005,
  "requires_credentials": false,
  "credential_fields": [],
  "connection_config": {
    "base_url": "http://localhost:8070",
    "timeout": 60
  },
  "endpoints": [
    {
      "endpoint": "/analyze",
      "http_method": "POST",
      "description": "Answer questions about document content using RAG or direct analysis. CACHE-ENABLED. Supports batch processing context.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": false,
          "description": "Path to source document for direct analysis. REQUIRED if vector_store_path is not provided."
        },
        {
          "name": "file_paths",
          "param_type": "array",
          "required": false,
          "description": "List of file paths for batch analysis"
        },
        {
          "name": "vector_store_path",
          "param_type": "string",
          "required": false,
          "description": "Path to FAISS vector store for a single document"
        },
        {
          "name": "vector_store_paths",
          "param_type": "array",
          "required": false,
          "description": "Paths to multiple vector stores for multi-doc analysis"
        },
        {
          "name": "query",
          "param_type": "string",
          "required": true,
          "description": "User's question or instruction for analysis"
        },
        {
          "name": "thread_id",
          "param_type": "string",
          "required": false,
          "description": "Conversation thread ID for context continuity"
        },
        {
          "name": "include_per_file_results",
          "param_type": "boolean",
          "required": false,
          "description": "If true, returns individual results for each file in batch mode"
        },
        {
          "name": "max_workers",
          "param_type": "integer",
          "required": false,
          "description": "Maximum concurrent workers for batch processing (default: 4)"
        }
      ]
    },
    {
      "endpoint": "/display",
      "http_method": "POST",
      "description": "Render document preview to canvas. USE for viewing document content. DO NOT USE for analysis or editing. READ-ONLY.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document file"
        },
        {
          "name": "thread_id",
          "param_type": "string",
          "required": false,
          "description": "Conversation thread ID"
        }
      ]
    },
    {
      "endpoint": "/create",
      "http_method": "POST",
      "description": "Create new Word document from provided content. USE for generating DOCX, TXT, PDF files from known text.",
      "parameters": [
        {
          "name": "content",
          "param_type": "string",
          "required": true,
          "description": "Direct content for the document"
        },
        {
          "name": "file_name",
          "param_type": "string",
          "required": true,
          "description": "File name (e.g., 'report.docx')"
        },
        {
          "name": "file_type",
          "param_type": "string",
          "required": false,
          "description": "Type: docx, txt, pdf (default: docx)"
        },
        {
          "name": "output_dir",
          "param_type": "string",
          "required": false,
          "description": "Directory to save (default: 'storage/documents')"
        },
        {
          "name": "thread_id",
          "param_type": "string",
          "required": false,
          "description": "Conversation thread ID"
        }
      ]
    },
    {
      "endpoint": "/edit",
      "http_method": "POST",
      "description": "Modify existing Word document content using natural language (AI editing).",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document to edit"
        },
        {
          "name": "instruction",
          "param_type": "string",
          "required": true,
          "description": "Natural language edit instruction"
        },
        {
          "name": "thread_id",
          "param_type": "string",
          "required": false,
          "description": "Conversation thread ID"
        },
        {
          "name": "use_vision",
          "param_type": "boolean",
          "required": false,
          "description": "If true, uses visual document understanding for layout-sensitive edits"
        },
        {
          "name": "auto_approve",
          "param_type": "boolean",
          "required": false,
          "description": "Enterprise: If true, bypasses approval gating for risky edits"
        },
        {
          "name": "approval_response",
          "param_type": "string",
          "required": false,
          "description": "Enterprise: User approval text for audit trail"
        }
      ]
    },
    {
      "endpoint": "/extract",
      "http_method": "POST",
      "description": "Extract structured data, tables, or text from documents.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document"
        },
        {
          "name": "extraction_type",
          "param_type": "string",
          "required": true,
          "description": "Type of extraction: 'text', 'tables', 'structured'"
        },
        {
          "name": "thread_id",
          "param_type": "string",
          "required": false,
          "description": "Conversation thread ID"
        }
      ]
    },
    {
      "endpoint": "/undo",
      "http_method": "POST",
      "description": "Revert last document edit.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document"
        },
        {
          "name": "action",
          "param_type": "string",
          "required": true,
          "description": "Must be 'undo'"
        }
      ]
    },
    {
      "endpoint": "/redo",
      "http_method": "POST",
      "description": "Re-apply previously undone edit.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to document"
        },
        {
          "name": "action",
          "param_type": "string",
          "required": true,
          "description": "Must be 'redo'"
        }
      ]
    },
    {
      "endpoint": "/history",
      "http_method": "POST",
      "description": "List document edit history and versions.",
      "parameters": [
        {
          "name": "file_path",
          "param_type": "string",
          "required": true,
          "description": "Path to the document."
        }
      ]
    }
  ],
